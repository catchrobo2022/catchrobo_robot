<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Constants -->
  <xacro:property name="visual_mesh_scale" value="1.0 1.0 1.0"/>
  <xacro:property name="collision_mesh_scale" value="1.0 1.0 1.0"/>

  <!-- Link & Joint -->
  <xacro:macro name="gripper" params="prefix parent *joint_origin">

    <joint name="${prefix}gripper/root" type="fixed">
      <xacro:insert_block name="joint_origin" />
      <parent link="${parent}" />
      <child link="${prefix}gripper/base_link" />
    </joint>
    
    <link name="${prefix}gripper/base_link">
      <visual>
        <geometry>
          <mesh filename="package://catchrobo_description/mesh/gripper/DAE/base.dae" scale="${visual_mesh_scale}"/>
        </geometry>
        <material name="white"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://catchrobo_description/mesh/gripper/STL/base.stl" scale="${collision_mesh_scale}"/>
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}gripper/joint1" type="revolute">
      <parent link="${prefix}gripper/base_link"/>
      <child link="${prefix}gripper/left_finger"/>
      <origin xyz="0.2511 0.0365 -0.086" rpy="${90*M_PI/180} 0 ${90*M_PI/180}"/>
      <axis xyz="0 0 1"/>
      <limit lower="${0*M_PI/180}" upper="${90*M_PI/180}" effort="6"
              velocity="5" acceleration="5"/>
    </joint>

    <link name="${prefix}gripper/left_finger">
      <visual>
        <geometry>
          <mesh filename="package://catchrobo_description/mesh/gripper/DAE/left_finger.dae" scale="${visual_mesh_scale}"/>
        </geometry>
        <material name="orange"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://catchrobo_description/mesh/gripper/STL/left_finger.stl" scale="${collision_mesh_scale}"/>
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}gripper/joint1_mimic" type="revolute">
      <parent link="${prefix}gripper/base_link"/>
      <child link="${prefix}gripper/right_finger"/>
      <origin xyz="0.2511 -0.0365 -0.086" rpy="${90*M_PI/180} 0 ${90*M_PI/180}"/>
      <axis xyz="0 0 1"/>
      <limit lower="${0*M_PI/180}" upper="${90*M_PI/180}" effort="6"
              velocity="5" acceleration="5"/>
      <mimic joint="${prefix}gripper/joint1" multiplier="-1" offset="0" />
    </joint>

    <link name="${prefix}gripper/right_finger">
      <visual>
        <geometry>
          <mesh filename="package://catchrobo_description/mesh/gripper/DAE/right_finger.dae" scale="${visual_mesh_scale}"/>
        </geometry>
        <material name="orange"/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://catchrobo_description/mesh/gripper/STL/right_finger.stl" scale="${collision_mesh_scale}"/>
        </geometry>
      </collision>
    </link>

    <joint name="${prefix}gripper/grasping_frame_joint" type="fixed">
      <parent link="${prefix}gripper/base_link"/>
      <child link="${prefix}gripper/grasping_frame"/>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
    </joint>
    <link name="${prefix}gripper/grasping_frame"/>

  </xacro:macro>
</robot>